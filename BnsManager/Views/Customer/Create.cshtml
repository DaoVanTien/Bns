@model EFEntity.tblCustomers
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage_Sales.cshtml";
}
@using(Html.BeginForm())
{
    @Html.ValidationSummary(true)
            <div class="row">
                <div class="col-lg-12 col-md-12 bns_form_head">
                    <p class="strong"> <strong> Customer / New </strong></p>
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                    @Html.ActionLink("Discard", "Index", "Customer", new {@class="btn btn-warning btn-sm" })
                </div>
                <!-- /.col-lg-12 -->
            </div>
			
			<div class="container-fluid">
                <div class="form-create">
                    <div class="form-header">
                        <div class="form-title">
                            <p>  Name (<input type="checkbox"> Is a Company? ) </p>
                            <div class="form-group">
                                <strong> Name: </strong>
                                @Html.TextBoxFor(model => model.Name, new {@class="form-control", @placeholder="Name" })
                            </div>
                            <div class="form-group">
                                <strong> CustomerID: </strong>
                                @Html.TextBoxFor(model => model.CustomerID, new {@class="form-control", @placeholder="Customer ID" })
                            </div>
                        </div>
                        <div class="form-option">
                            <ul> 
                                <li> <button type="button" class="btn btn-default btn-sm"> Opportunities </button> </li>
                                <li> <button type="button" class="btn btn-default btn-sm"> Opportunities </button> </li>
                                <li> <button type="button" class="btn btn-default btn-sm"> Opportunities </button> </li>
                                <li> <button type="button" class="btn btn-default btn-sm"> Opportunities </button> </li>

                            </ul>
                        </div>

                    </div>


                    <div class="form-content">
                            <table class="table">
                            <tbody>
                                <tr>     
                                    <td> <strong> Address </strong>   </td>
                                    <td> @Html.TextBoxFor(model => model.Address1, new {@class="form-control", @placeholder="Address..." })</td>
                                    <td> <strong> Phone </strong>  </td>
                                    <td>  @Html.TextBoxFor(model => model.Phone1, new {@class="form-control", @placeholder="01662115090" }) </td>
                                </tr>

                                <tr>     
                                    <td> <strong> City </strong>   </td>
                                    <td>  @Html.TextBoxFor(model => model.Address2, new {@class="form-control", @placeholder="City..." }) </td>
                                    <td> <strong> Mobile </strong>  </td>
                                    <td>  @Html.TextBoxFor(model => model.Phone2, new {@class="form-control", @placeholder="01662115090" }) </td>
                                </tr>

                                <tr>     
                                    <td>  <strong> Web site </strong>  </td>
                                    <td>  @Html.TextBoxFor(model => model.Website, new {@class="form-control", @placeholder="bnstravel.com" }) </td>
                                    <td> <strong> Email </strong>  </td>
                                    <td>  @Html.TextBoxFor(model => model.Email, new {@class="form-control", @placeholder="tiendao.online@gmail.com" }) </td>
                                </tr>
                                
                                
                            </tbody>
                        </table>

                    </div>


                    <div class="form-footer">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist">
                         
                          <li><a href="#internalNote" role="tab" data-toggle="tab">Internal Notes</a></li>
                          <li><a href="#salePurchase" role="tab" data-toggle="tab"> Sales &amp; Purchase</a></li>
                          <li><a href="#accounting" role="tab" data-toggle="tab"> Accounting </a></li>
                          <li><a href="#pointSale" role="tab" data-toggle="tab"> Point of Sale </a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                          <div class="tab-pane" id="internalNote"> 
                            @Html.TextAreaFor(model => model.Notes, new {@class="form-control", @placeholder="Put an interal notes..." })
                          </div>
                          <div class="tab-pane" id="salePurchase"> salePurchase </div>
                          <div class="tab-pane" id="accounting">  accounting </div>
                          <div class="tab-pane" id="pointSale">  pointSale </div>
                        </div>


                    </div>

                </div>
                
               
            </div>
            <!-- /.container-fluid -->
            <!-- /.row -->
			
}
            
			
			

