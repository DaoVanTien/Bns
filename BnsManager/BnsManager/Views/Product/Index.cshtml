@model IEnumerable<EFEntity.tblProducts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage_Sales.cshtml";
    <link href="~/Content/css/plugins/dataTables.bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
    $(document).ready(function() {
        $('#dataTables-example').dataTable();
    });
    </script>
   
}
            <div class="row">
               <div class="col-lg-12 col-md-12 bns_form_head">
                    <p class="strong"> <strong> Product </strong></p>
                    <div> 
                        @Html.ActionLink("Create", "Create", "Product", new {@class = "btn btn-primary btn-sm active"})
                    </div>
                    
                    
                </div>
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            DataTables Advanced Tables
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th> Product ID </th>
                                            <th> Product Name </th>
                                            <th> Quantity </th>
                                            <th> Location </th>
                                           
                                            <th> </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model)
                                        { 
                                         <tr class="gradeA">
                                            <td> @c.ProductID </td>
                                            <td> @c.ProductName </td>
                                            <td> @c.Quantity </td>
                                            <td class="center"> @c.Location</td>
                                           
                                             <td> @Html.ActionLink("Edit", "Edit", new { ID = @c.ID }) 
                                                 @Html.ActionLink("Delete", "Delete", new { ID = @c.ID }, new { @onclick = "return confirm('Are you sure you wish to delete this article?');" })

                                             </td>

                                        </tr>
                                        }
                                       
                                        
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                            
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            

