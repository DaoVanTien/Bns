@model EFEntity.tblOrders
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage_Sales.cshtml";
    <script src="~/Scripts/js/plugins/bootstrap-datepicker.js"></script>
    <link href="~/Content/css/plugins/datepicker.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').datepicker({});
        });
    </script>
}
@using(Html.BeginForm())
{
    @Html.ValidationSummary(true)
   
            <div class="row">
                <div class="col-lg-12 col-md-12 bns_form_head">
                    <p class="strong"> <strong> Order / New </strong></p>
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                    @Html.ActionLink("Discard", "Index", "Customer", new {@class="btn btn-warning btn-sm" })
                </div>
                <!-- /.col-lg-12 -->
            </div>
			
			<div class="container-fluid">
               <div class="form-create">
                   
                   <table class="table">
                       <tbody>
                           <tr>
                               <td> <strong> Order Name </strong> </td>
                               <td> 
                                   
                                    @Html.TextBoxFor(Model => Model.OrderName) 
                               </td>
                               <td> <strong> Date </strong> </td>
                               <td> Date </td>
                           </tr>
                           <tr>
                               <td> <strong> OrderID </strong> </td>
                               <td>
                                   @Html.TextBoxFor(Model => Model.OrderID)
                               </td>
                               <td></td>
                           </tr>
                           
                       </tbody>
                   </table>
                      
                   </div>
               </div>
               
            
            <!-- /.container-fluid -->
            <!-- /.row -->
			
}
            
			
			


